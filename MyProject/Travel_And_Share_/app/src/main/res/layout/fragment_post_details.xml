<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    tools:context=".ui.home.PostDetailsFragment">


    <ImageView
        android:id="@+id/Fragment_post_details_image"
        android:layout_width="339dp"
        android:layout_height="224dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_post_details_name"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Fragment_post_details_like"
        android:layout_width="40dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_thumb_up_24"
        app:layout_constraintStart_toStartOf="@+id/Fragment_post_details_image"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_post_details_image" />

    <TextView
        android:id="@+id/Fragment_post_details_count_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Fragment_post_details_like"
        app:layout_constraintStart_toEndOf="@+id/Fragment_post_details_like"
        app:layout_constraintTop_toTopOf="@+id/Fragment_post_details_like" />

    <TextView
        android:id="@+id/Fragment_post_details_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Trip Name"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Suitable For"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fragment_post_details_cost"
        app:layout_constraintStart_toStartOf="@+id/fragment_post_details_costTV2"
        app:layout_constraintTop_toBottomOf="@+id/fragment_post_details_cost" />

    <TextView
        android:id="@+id/Fragment_post_details_family"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:drawableStart="@drawable/ic_baseline_family_restroom_24"
        android:text="  Families"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toStartOf="@+id/fragment_post_details_costTV2"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/Fragment_post_details_benefactors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_baseline_directions_run_24"
        android:text="Benefactors"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/Fragment_post_details_family"
        app:layout_constraintStart_toEndOf="@+id/Fragment_post_details_family"
        app:layout_constraintTop_toTopOf="@+id/Fragment_post_details_family" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_post_details_accessible"
        app:layout_constraintStart_toStartOf="@+id/Fragment_post_details_family"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_post_details_family" />

    <EditText
        android:id="@+id/Fragment_post_details_description_et"
        android:layout_width="0dp"
        android:layout_height="104dp"


        android:layout_marginTop="8dp"
        android:background="@drawable/fild_in_add_trip"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_post_details_accessible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fragment_post_details_family"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/Fragment_post_details_accessible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_baseline_accessible_24"
        android:text="Accessible"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Fragment_post_details_benefactors"
        app:layout_constraintEnd_toEndOf="@+id/fragment_post_details_cost"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Fragment_post_details_benefactors"
        app:layout_constraintTop_toTopOf="@+id/Fragment_post_details_benefactors" />

    <TextView
        android:id="@+id/fragment_post_details_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_post_details_locationTV"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_post_details_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fragment_post_details_locationTV"
        app:layout_constraintTop_toTopOf="@+id/fragment_post_details_locationTV" />

    <TextView
        android:id="@+id/fragment_post_details_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_post_details_costTV2"
        app:layout_constraintEnd_toEndOf="@+id/fragment_post_details_location"
        app:layout_constraintStart_toEndOf="@+id/fragment_post_details_costTV2"
        app:layout_constraintTop_toTopOf="@+id/fragment_post_details_costTV2" />

    <TextView
        android:id="@+id/fragment_post_details_locationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Location"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toStartOf="@+id/Fragment_post_details_image"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_post_details_like" />

    <TextView
        android:id="@+id/fragment_post_details_costTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="cost"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintStart_toStartOf="@+id/fragment_post_details_locationTV"
        app:layout_constraintTop_toBottomOf="@+id/fragment_post_details_locationTV" />


</androidx.constraintlayout.widget.ConstraintLayout>